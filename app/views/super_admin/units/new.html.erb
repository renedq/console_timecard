<div class='page-header'>
  <h1>Create a New Unit</h1>
</div>

<div class='well bs-component'>
  <%= form_for(@unit, url: super_admin_units_path, html: { class: 'form-horizontal', multipart: true}) do |f| %>
    <% if @unit.errors.any? %>
    <fieldset>
        <div class="alert" id="error_explanation">
          <h2><%= pluralize(@unit.errors.count, "error") %> prohibited this @unit from being saved:</h2>

          <ul>
          <% @unit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <%= f.label :name, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :city, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.text_field :city, class: 'form-control', required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :state, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.text_field :state, class: 'form-control', required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :phone_number, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.text_field :phone_number, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <fieldset>
  <% end %>
</div>

<script type="application/javascript">
$(document).ready( function() {
    $('#unit_name').focus().select();
});
</script>
<%= link_to 'Back', super_admin_units_path %>
