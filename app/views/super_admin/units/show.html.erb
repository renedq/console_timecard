<div style="float: right;">
	<%= link_to 'Add User', "new_super_admin_user_path", class: 'btn btn-primary' %>
</div>

<%= link_to 'All Units', super_admin_units_path, class: 'btn btn-primary' %>
<%= link_to 'Edit Unit', edit_super_admin_unit_path(@unit), class: 'btn btn-primary' %>

<div class='page-header'>
  <h2><%= @unit.name %></h2> 
  <h4><%= @unit.city %>, <%= @unit.state %></h4> 
  <h4><%= @unit.phone_number %></h4> 
    <table class='table table-striped table-hover' width=30%>
      <thead>
        <tr>
          <th><br></th>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Email</th>
					<th>Admin?</th>
        </tr>
      </thead>

      <tbody>
				<% @unit.users.order(last_name: :asc).each do |user| %>
          <tr>
						<td></td>
						<td><%= user.last_name %></td>
						<td><%= user.first_name %></td>
						<td><%= user.email_address %></td>
						<td><%= user.admin %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

