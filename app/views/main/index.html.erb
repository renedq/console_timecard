<div class='page-header'>
    <h1>Upcoming Menus</h1>

    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Vendor</th>
          <th>Type</th>
        </tr>
      </thead>

      <tbody>
        <% @menus.where('menu_date >= ?', DateTime.now).order(menu_date: :asc).each do |menu| %>
          <tr>
            <td><%= menu.menu_date %></td>
            <td><%= link_to menu.vendor.name, main_path(id: menu.id) %></td>
            <td><%= menu.menu_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
