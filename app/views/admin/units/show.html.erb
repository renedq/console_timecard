<div style="float: right;">
	<%= link_to 'View FY Totals', timecards_path(id: params['id']), method: 'GET', class: 'btn btn-primary' %>
  <%= link_to 'Add User', new_admin_user_path(unit_id: @unit.id), class: 'btn btn-primary' %>
</div>

<div class='page-header'>
  <h2><%= @unit.name %></h2> 
  <h4><%= @unit.city %>, <%= @unit.state %></h4> 
  <h4><%= @unit.phone_number %></h4> 
    <table class='table table-striped table-hover' width=60%>
      <thead>
        <tr>
          <th>Name</th>
					<th><br></th>
          <th>Email</th>
					<th><br></th>
					<th><br></th>
        </tr>
      </thead>

      <tbody>
        <% @users_data.each do |user| %>
          <tr>
						<td><%= user['user']['last_name'] + ", " + user['user']['first_name'] %></td>
						<td>
							<% if user['user']['active'] != true %>
								<i>Inactive</i>
							<% end %>
						</td>
						<td><%= user['user']['email'] %>
						<td><%= link_to "Show", admin_user_path(id: user['user']['id']), method: 'GET' %></td>
						<td><%= link_to "Edit", edit_admin_user_path(id: user['user']['id']), method: 'GET' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

