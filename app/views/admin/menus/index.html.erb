<%= link_to 'New Menu', '/admin/menus/new', class: 'btn btn-primary' %>
<%= link_to 'New Vendor', new_admin_vendor_path, class: 'btn btn-primary' %>
<%= link_to 'View Vendors', '/admin/vendors', class: 'btn btn-primary' %>

<div class='page-header'>
    <h1>Today's Menu</h1>
    <% @menus.where(menu_date: Time.now).each do |menu| %>
        <%= link_to image_tag(menu.vendor.image) , admin_menu_path(id: menu.id) %>
        <h2><%= link_to menu.vendor.name , admin_menu_path(id: menu.id) %></h2>
    <% end %>
</div>
<div class='page-header'>
    <h1>Upcoming Menus</h1>

    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Vendor</th>
          <th>Type</th>
        </tr>
      </thead>

      <tbody>
        <% @menus.where('menu_date >= ?', Time.now).order(menu_date: :asc).each do |menu| %>
          <tr>
            <td><%= menu.menu_date %></td>
            <td><%= link_to menu.vendor.name, admin_menu_path(id: menu.id) %></td>
            <td><%= menu.menu_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class='page-header'>
    <h1>Past Menus</h1>

    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Vendor</th>
          <th>Type</th>
        </tr>
      </thead>

      <tbody>
        <% @menus.where('menu_date < ?', Time.now - 1.day).order(menu_date: :desc).each do |menu| %>
          <tr>
            <td><%= menu.menu_date %></td>
            <td><%= link_to menu.vendor.name, admin_menu_path(id: menu.id) %></td>
            <td><%= menu.menu_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

